<div id="landing">

  <%= div_for(@game, :class => "") do |g| %>
    <%= link_to play_game_url(id: g.path) do %>
      <div class="placeholder">
        <%= image_tag @game.image.url %>
      </div>
    <% end %>

    <div class="description">
      <h1><%= g.name %></h1>
      <p><%= g.description %></p>
    </div>
  <% end %>

  <% if @game.about? %>
    <div id="about" >
      <p class="readable">
        <%= raw @game.about %>
      </p>
    </div>
  <% end %>


  <% if @game.resources? %>
    <div id="resources">
      <h2>Resources</h2>
      <%= raw @game.resources %>
    </div>
  <% end %>

  <div id="play">
    <%= link_to "Play", play_game_url(id: @game.path), class: "link_button" %>
    <% unless @game.survey.url.blank? %>
      <%= link_to "Survey", survey_game_url(id: @game.path), class: "link_button" %>
    <% end %>
  </div>
</div>