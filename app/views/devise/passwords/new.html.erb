<div class="large_pathfinder_logo"></div>

<hr>

<div class="login_container">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.email_field :email, placeholder: "Enter Email" %></div>

    <div><%= f.submit "Send Reset Instructions", class: "ResetPasswordButton" %></div>
  <% end %>

  <%= render "links" %>
</div>
